@{
    if (Model["STATUS"].GetInt32() == 1)
    {
        <label class="label label-info">Cadastrada</label>
    }
    if (Model["STATUS"].GetInt32() == 2)
    {
        <label class="label label-success">Emitida</label>
    }
    if (Model["STATUS"].GetInt32() == 3)
    {
        <label class="label label-danger">Cancelada</label>
    }
    if (Model["STATUS"].GetInt32() == 4)
    {
        <label class="label label-warning">Com divergências</label>
    }
}
<style>
    .label-success {
        background-color: #5cb85c !important;
    }
</style>
