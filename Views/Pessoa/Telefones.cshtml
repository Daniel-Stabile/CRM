@using Benner.Tecnologia.Common
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th>
                <i class="fa fa-book"></i> Tipo
            </th>
            <th>
                <i class="fa fa-phone"></i> Telefone
            </th>
            <th>
                <i class="fa fa-hashtag"></i> Ramal
            </th>
            <!--<th> </th>-->
        </tr>
    </thead>
    <tbody>
        @if (@ViewBag.Telefones != null) 
        {
            foreach (var entity in @ViewBag.Telefones)
            {
                EntityBase telefone = entity as EntityBase;
                <tr>
                    <td> @telefone.Fields["NOME"] </td>
                    <td>
                        (@telefone.Fields["DDD"]) @telefone.Fields["TELEFONE"]
                    </td>
                    <td> @telefone.Fields["RAMAL"] </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3">@ViewBag.MsgSemRegistro</td></tr>
        }
        <!--<td>
              <a href="javascript:;" class="btn dark btn-sm btn-outline sbold uppercase">
                <i class="fa fa-share"></i> Visualizar
              </a>
            </td> -->
    </tbody>
</table>