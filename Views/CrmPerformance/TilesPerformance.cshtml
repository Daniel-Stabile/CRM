@using Models.Ui
@model List<TileProgress>

<div class="row">
    @foreach (TileProgress item in Model)
    {

        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <a href="@item.Link">
                <div class="dashboard-stat2 ">
                    <div class="display">
                        <div class="number">
                            <h3 class="font-@item.Color">
                                <span data-counter="counterup" data-value="7800">@Html.DisplayFor(modelItem => item.Status)</span>
                                <small class="font-@item.Color"></small>
                            </h3>
                            <small>@item.Text</small>
                        </div>
                        <div class="icon">
                            <i class="icon-pie-chart"></i>
                        </div>
                    </div>
                    <div class="progress-info">
                        <div class="progress">
                            <span style="width:@item.Percent.ToString().Replace(',','.')%;" class="progress-bar progress-bar-success @item.Color">
                                <span class="sr-only">@item.Percent%</span>
                            </span>
                        </div>
                        <div class="status">
                            <div class="status-title">@item.Resume </div>
                            <div class="status-number"> @item.Percent% </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>