<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingFile"
            type="log4net.Appender.RollingFileAppender">
    <file value="btl.worker.${COMPUTERNAME}.log" />
    <appendToFile value="false" />
    <maxSizeRollBackups value="2" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5p %d{hh:mm:ss} [%thread] %message%newline" />
    </layout>
  </appender>

  <appender name="ColoredConsoleAppender"
            type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="INFO" />
      <foreColor value="White, HighIntensity" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="White" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{hh:mm:ss} [%thread] %message%newline" />
    </layout>
  </appender>

  <appender name="EventLogAppender"
            type="log4net.Appender.EventLogAppender" >
    <logName value="BTL" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline%newline%exception" />
    </layout>
    <mapping>
      <level value="ERROR" />
      <eventLogEntryType value="Error" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <eventLogEntryType value="Information" />
    </mapping>
  </appender>

  <appender name="benner-elastic" type="Benner.Tecnologia.Common.Instrumentation.ElasticSearch.ElasticLog4NetAppender">
  </appender>
  
  <root>
    <level value="ALL"/>
    <appender-ref ref="ColoredConsoleAppender" />

    <!-- Este listener será considerado, ou não, durante o warmup do worker, baseado na configuração LoggingServerActive  -->
    <appender-ref ref="benner-elastic" />

    <!-- Descomentar a linha abaixo para gerar log detalhado em arquivo -->
    <!-- <appender-ref ref="RollingFile" /> -->

  </root>

  <logger name="EventLogLogger">
    <level value="INFO"/>
    <appender-ref ref="EventLogAppender" />
  </logger>
  
</log4net>